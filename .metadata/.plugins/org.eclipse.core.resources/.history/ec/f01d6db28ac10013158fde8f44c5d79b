var getInfo = function(){
	var bandWindow = Ti.UI.createWindow({
		title: this.text
	});
	var detailText = Ti.UI.createLAbel({
		text: this.details,
		top: 30,
		left: 15,
		right: 15
	});
	bandWindow.add(detailText);
	navWindow.openWindow(bandWindow);
};

var appInterface = function(){
	var spacing = 50;
	for(n in bands){
		var titleLabel = Ti.UI.createLabel({
			text: bands[n].headTitle,
			left: 20,
			right: 20,
			top: spacing,
			height: 20,
			backgroundColor: "#333",
			font: {fontFamily: "Verdana", fontSize: 16},
			color: "#fafafa"
		});
		spacing = titleLabel.top + titleLabel.height + 10;
		console.log(spacing);
		for(m in bands[n].members){
			var itemLabel = Ti.UI.createLabel({
				text: bands[n].members[m].name,
				details: bands[n].members[m].info,
				left: 30,
				right: 15,
				top: spacing,
				height: 25,
				backgroundColor: "#ffffff",
				font: {fontFamily: "Verdana", fontSize: 20},
				color: "#333"
			});
			
			mainWindow.add(itemLabel);
			spacing = itemLabel.top + itemLabel.height + 10;
			itemLabel.addEventListener("click", getInfo);
		}	
		mainWindow.add(titleLabel);
		spacing = itemLabel.top + itemLabel.height + 30;
	}
};

appInterface();

navWindow.open();

