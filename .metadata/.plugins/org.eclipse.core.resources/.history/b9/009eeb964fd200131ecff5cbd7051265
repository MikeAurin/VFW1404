navWin = Ti.UI.iOS.createNavigationWindow({
	window: mainWin
});

var imageArray = ["et.jpg",
"etride.jpg",
"fury.jpg",
"hulk.jpg",
"hulk2.jpg",
"jpart.gif",
"jppromo.gif",
"mib.jpg",
"mib2.jpg",
"mummyride.jpg",
"poseidon.jpg",
"ripride.jpg",
"ripridepromo.jpg",
"ripsaw.jpg",
"ripsaw2.jpg",
"shrek4d.jpg",
"shrekpromo.jpg",
"spidey.jpg",
"spideypromo.jpg",
"themummypromo.jpg",
"twister.jpg",
"twisterpromo.jpg",
];

var imgs = Ti.UI.createImageView({
		image: "",
		left:10,
		right:10,
		top: 20,
		height: 250,
		borderRadius: 10
		});

changeButton = Ti.UI.createButton({
	bottom: 0,
	width: "100%",
	title: "Randomize"
});

var randomPictures = function(min, max){
	return Math.floor(Math.random() * (max - min + 1) + min);
	};

changeButton.addEventListener('click', function (e) {
    imgs.image = (imageArray[randomPictures(1, imageArray.length) - 1]);
    });

mainWin.add(changeButton, imgs);
navWin.openWindow();

