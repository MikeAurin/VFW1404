Titanium.UI.setBackgroundColor("white");

mainWin = Ti.UI.createWindow({
	backgroundColor: "white"
});

mainView = Ti.UI.createView({
	width: "%100",
	height: 200,
	bottom: 0
});

mainImage = Ti.UI.createLabel({
	backgroundImage: "universal.jpg",
	text: "Universal",
	width: "100%",
	height: 200,
	bottom: 0
});

mainView.add(mainImage);
mainWin.add(mainView);
mainWin.open();

