var pWidth = Ti.Platform.displayCaps.platformWidth;
var pHeight = Ti.Platform.displayCaps.platformHeight;
var imagesFolder = Ti.Filesystem.getFile(Ti.Filesystem.resourcesDirectory, "proj3images");
var imageFiles = imagesFolder.getDirectoryListing();
var size = 70;

var imageWin = Ti.UI.createWindow({
	title: "Mike's Gallery",
});

var imageNavWin = Ti.UI.iOS.createNavigationWindow({
	window: imageWin
});

var closeButton = Ti.UI.createLabel({
	text: "Close Window",
	textAlign: "center",
	backgroundColor : "#cecece",
	color: "white",
	height: 40,
	width: "100%",
	bottom: 0,
	font: {fontSize: 14, fontFamily: "Verdana"}
});

var closeWindow = function(){
	var openFile = require("app");
	imageNavWin.close();
};

closeButton.addEventListener("click", closeWindow);
imageNavWin.add(closeButton);

var border = Ti.UI.createView({
	height: 1, 
	width: pWidth,
	top: 20
});

var viewContainer = Ti.UI.createScrollView({
	top: 0,
	layout: "horizontal",
	width: pWidth,
	height: pHeight-border.top+border.height+closebutton.height+20,
	contentWidth: pWidth,
	showVerticalScrollIndicator: true,
	backgroundColor: "#cecece"
});

imageWin.add(border, viewContainer);

var getImage = function(dataSource){
	var imageWindow = Ti.UI.createWindow({
		title: dataSource.image,
		font: {fontFamily: "Verdana", fontSize: 12},
		backgroundColor: "white"
	});


var getImage = function(){
	var imageWindow = Ti.UI.createImageView({
		backgroundColor: "#cecece",
		image: "proj3images/" + imageFiles[i],
	});

	imageWindow.open();

};
	
	var imageView = Ti.UI.createImageView({
		image: dataSource.image,
		top: 20,
		left: 20,
		right: 20,
		bottom: 20,
	});
	imageWindow.add(imageView);
	imageNavWin.openWindow(imageWindow);
};

for(var i=0; i=imageFiles.length; i++){
	var view = Ti.UI.createView({
		top: 0,
		left: 10,
		width: size,
		height: size,
	});
	
	var picView = Ti.UI.createImageView({
		image: "proj3images/" + imageFiles[i],
		top: 0,
		width: view.width,
		hasDetail: true
	});
	
	view.add(picView);
	picView.addEventListener("click", function(event){
		getImage(event.source);
	});
	
};

viewContainer.open();
imageNavWin.add(imageWin, viewContainer);
imageNavWin.open();

