Ti.UI.setBackgroundColor("white");

var mainWindow = Ti.UI.createWindow({
	title: "Mike's Gallery",
	backgroundImage: ("#fef"),
});

var mainNav = Ti.UI.iOS.createNavigationWindow({
	window: mainWindow
});

var titleImage = Ti.UI.createView({
	backgroundImage: "cover.jpg",
	borderRadius: 8,
	top: 60,
	left: 30,
	right: 30,
	bottom: 120
});

var beginButton = Ti.UI.createLabel({
	height: 40,
	bottom: 30,
	left: 30,
	right: 30,
	height: 50,
	borderRadius: 10,
	backgroundColor: "#c42332",
	text: "Start Gallery",
	font: {fontFamily: "Verdana", fontSize: 30, fontWeight: "bold"},
	color: "#fff",
	textAlign: "center"
});


var imagePull = require("gallery");

mainWindow.add(beginButton, titleImage);
mainWindow.open();
mainNav.open(mainWindow);
